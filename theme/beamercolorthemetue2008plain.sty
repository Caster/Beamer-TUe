\mode<presentation>

\RequirePackage{tuestyle2008}
\definecolor{themecolor}{rgb}{0.839,0.000,0.290}

\DeclareOptionBeamer{theme}[red]{%
\ifthenelse{\equal{#1}{red}}{\definecolor{themecolor}{rgb}{0.839,0.000,0.290}}{}
\ifthenelse{\equal{#1}{red}}{\definecolor{themecolorlight}{rgb}{0.839,0.000,0.290}}{}
\ifthenelse{\equal{#1}{cyan}}{\definecolor{themecolor}{rgb}{0.000,0.635,0.871}}{}
\ifthenelse{\equal{#1}{cyan}}{\definecolor{themecolorlight}{RGB}{189,214,222}}{}
\ifthenelse{\equal{#1}{blue}}{\definecolor{themecolor}{rgb}{0.000,0.400,0.800}}{}
\ifthenelse{\equal{#1}{blue}}{\definecolor{themecolorlight}{rgb}{0.000,0.400,0.800}}{}
\ifthenelse{\equal{#1}{green}}{\definecolor{themecolor}{rgb}{0.518,0.824,0.000}}{}
\ifthenelse{\equal{#1}{green}}{\definecolor{themecolorlight}{rgb}{0.518,0.824,0.000}}{}
\ifthenelse{\equal{#1}{orange}}{\definecolor{themecolor}{rgb}{1.000,0.604,0.000}}{}
\ifthenelse{\equal{#1}{orange}}{\definecolor{themecolorlight}{rgb}{1.000,0.604,0.000}}{}
}
\ProcessOptionsBeamer


\mode<all>

\setbeamercolor{structure}{fg=themecolor}
\setbeamercolor{alerted text}{fg=themecolor}
